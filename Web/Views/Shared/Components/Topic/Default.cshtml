@model Web.ViewComponents.TopicViewComponent
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topic[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic[0].Enabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Topic)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enabled)
                </td>
                <td>
                    <a href=@("/Topic/Details?id=" + @item.Id)>Details</a>
                </td>
            </tr>
}
    </tbody>
</table>
