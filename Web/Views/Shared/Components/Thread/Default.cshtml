@model IList<Web.Models.Thread>
@{
    //ViewData["Title"] = "Threads";
    ViewBag.A = "b";
}
<h2>Threads</h2>
<p>
    <a asp-page="Create">Create New</a>
</p>
<p>
    View Component!
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].TopicId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pinned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PinOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TopicId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pinned)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PinOrder)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
